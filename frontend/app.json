{
  "expo": {
    "name": "G-CAMP",
    "slug": "gcamp-2026",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/logo(gcamp).png",
    "scheme": "gcamp2026testapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.gcamp.smartfarm",
      "infoPlist": {
        "NSCameraUsageDescription": "AI 비서에게 사진으로 질문하기 위해 카메라 권한이 필요합니다.",
        "NSPhotoLibraryUsageDescription": "AI 비서에게 사진으로 질문하기 위해 앨범 접근 권한이 필요합니다.",
        "NSSpeechRecognitionUsageDescription": "음성으로 AI 비서에게 질문하기 위해 음성 인식 권한이 필요합니다.",
        "NSMicrophoneUsageDescription": "음성으로 AI 비서에게 질문하기 위해 마이크 권한이 필요합니다.",
        "NSLocationWhenInUseUsageDescription": "날씨 정보를 제공하기 위해 위치 권한이 필요합니다.",
        "NSLocalNetworkUsageDescription": "CCTV RTSP 스트림을 재생하기 위해 로컬 네트워크 접근이 필요합니다.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "package": "com.gcamp.smartfarm",
      "minSdkVersion": 26,
      "usesCleartextTraffic": true,
      "adaptiveIcon": {
        "backgroundColor": "#FFFFFF",
        "foregroundImage": "./assets/images/app-icon-foreground.png"
      },
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "RECORD_AUDIO",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION"
      ],
      "edgeToEdgeEnabled": false,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/icon.png",
          "imageWidth": 150,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "AI 비서에게 사진으로 질문하기 위해 카메라 권한이 필요합니다.",
          "microphonePermission": "음성으로 AI 비서에게 질문하기 위해 마이크 권한이 필요합니다.",
          "recordAudioAndroid": true
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "AI 비서에게 사진으로 질문하기 위해 앨범 접근 권한이 필요합니다.",
          "cameraPermission": "AI 비서에게 사진으로 질문하기 위해 카메라 권한이 필요합니다."
        }
      ],
      "react-native-vlc-media-player",
      "expo-secure-store",
      [
        "expo-build-properties",
        {
          "android": {
            "minSdkVersion": 26
          }
        }
      ],
      "@react-native-community/datetimepicker"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "eas": {
        "projectId": "965bce3c-c8f8-4d4c-b775-d9637b0baa46"
      }
    }
  }
}
